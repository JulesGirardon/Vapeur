generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  releaseDate DateTime
  genre       Genre?   @relation(fields: [genreId], references: [id])
  genreId     Int?
  editor      Editor?  @relation(fields: [editorId], references: [id])
  editorId    Int?
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String
  games Game[]
}

model Editor {
  id    Int    @id @default(autoincrement())
  name  String
  games Game[]
}
