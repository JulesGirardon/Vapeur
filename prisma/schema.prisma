generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  releaseDate DateTime
  genre       Genre[]
  editor      Editor[]
}

model Genre {
  id      Int    @id @default(autoincrement())
  name    String
  games   Game?  @relation(fields: [gamesId], references: [id])
  gamesId Int?
}

model Editor {
  id      Int    @id @default(autoincrement())
  name    String
  games   Game?  @relation(fields: [gamesId], references: [id])
  gamesId Int?
}
